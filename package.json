{
    "name": "onekey-desktop",
    "version": "21.3.0",
    "private": true,
    "repository": "https://github.com/OneKeyHQ/OneKey-Desktop",
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "node": ">=12",
        "yarn": ">=1.22.0"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/babel-jest"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "postinstall": "yarn patch-package",
        "build:libs": "lerna run build:lib",
        "build:connect": "rimraf packages/suite-data/files/connect && yarn webpack --config packages/suite-data/connect.webpack.js",
        "deps": "rimraf 'node_modules' '*/**/node_modules' && yarn",
        "deps:update": "rimraf 'yarn.lock' 'node_modules' '*/**/node_modules' && yarn",
        "desktop:dev": "yarn workspace @onekey/web dev",
        "desktop:dev:desktop": "yarn workspace @onekey/desktop dev",
        "desktop:build:web": "yarn workspace @onekey/web build",
        "type-check": "yarn lerna run type-check",
        "lint": "yarn lerna run lint"
    },
    "resolutions": {
        "**/@types/react": "17.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.7",
        "@babel/core": "^7.12.7",
        "@babel/node": "^7.12.6",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.7",
        "@babel/preset-react": "^7.12.7",
        "@babel/preset-typescript": "^7.12.7",
        "@types/jest": "^26.0.20",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "autoprefixer": "^10.2.6",
        "babel-jest": "^26.6.3",
        "babel-plugin-module-resolver": "^4.0.0",
        "concurrently": "^5.1.0",
        "eslint": "^7.14.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-cypress": "^2.11.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^26.6.3",
        "lerna": "^3.20.2",
        "npm-run-all": "^4.1.5",
        "patch-package": "^6.2.1",
        "postcss": "^8.3.5",
        "postinstall-postinstall": "^2.0.0",
        "prettier": "2.2.0",
        "prettier-eslint": "^12.0.0",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.2.4",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@headlessui/react": "^1.3.0",
        "classnames": "^2.3.1"
    }
}
